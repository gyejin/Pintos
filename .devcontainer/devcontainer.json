{
    "name": "pintos-dev",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "updateRemoteUserUID": false,
    "remoteUser": "root",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.cpptools",
                "ms-azuretools.vscode-docker",
                "ms-vscode.makefile-tools"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh"
            }
        }
    }
}